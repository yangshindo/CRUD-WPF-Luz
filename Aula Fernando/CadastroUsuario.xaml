<Window x:Class="Aula_Fernando.CadastroUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_Fernando"
        mc:Ignorable="d"
        Title="CadastroUsuario" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="294,100,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="226"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="294,150,0,0" TextWrapping="Wrap" Text="{Binding Email}" VerticalAlignment="Top" Width="226"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="294,200,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="226"/>
        <Button Content="Salvar" Click="bnt_Salvar" HorizontalAlignment="Left" Margin="370,276,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.183,0.003"/>
    </Grid>
</Window>
