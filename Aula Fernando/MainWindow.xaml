<Window x:Class="Aula_Fernando.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_Fernando"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView ItemsSource="{Binding UsersList}" SelectedItem="{Binding SelectedUser}" HorizontalAlignment="Left" Height="366" Margin="521,30,0,0" VerticalAlignment="Top" Width="239" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Email}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Adicionar" Command="{Binding Add}" HorizontalAlignment="Left" Margin="275,206,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Remover" Command="{Binding Remove}" HorizontalAlignment="Left" Margin="275,281,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Editar" Command="{Binding Edit}" HorizontalAlignment="Left" Margin="275,364,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.524,0.494"/>

    </Grid>
</Window>
